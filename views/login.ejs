</header>
<!-- Header section ends -->

<!-- Login form section starts -->
<section class="login-form">
    <form id="loginForm" action="/auth" method="post">
        <h3>Cuenta</h3>
        <div class="inputBox">
            <span class="fas fa-user"></span>
            <input type="email" name="email" id="email" placeholder="Ingresa tu correo electrónico" required>
        </div>
        <div class="inputBox">
            <span class="fas fa-lock"></span>
            <input type="password" name="password" id="password" placeholder="Ingresa tu contraseña" required>
        </div>
        <!-- <div class="inputBox">
            <label for="user-type">Tipo de usuario:</label>
            <select id="user-type" name="userType" required>
                <option value="" disabled selected>Selecciona tu tipo de usuario</option>
                <option value="user">Usuario</option>
                <option value="seller">Vendedor</option>
                <option value="admin">Administrador</option>
            </select>
        </div> -->
        <input type="submit" value="Iniciar sesión" class="btn">
        <div class="flex">
            <input type="checkbox" name="remember" id="remember-me">
            <label for="remember-me">Recordar</label>
            <a href="#">¿Olvidaste la contraseña?</a>
        </div>
        <a href="register" class="btn">Crear cuenta</a>
    </form>
</section>
<!-- Login form section ends -->

<!-- Footer section starts -->
